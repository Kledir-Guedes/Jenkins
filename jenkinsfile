
pipeline {
    agent any    
    parameters{
            choice( name: 'Environment',
               choices:'lab\nhomol\nprod',
               description: 'Which environment do you want to run the job in?' )
           }
   if (env.Environment == "lab") {       
    stages {
        
        stage('Build') {
            steps {
                echo 'inicio lab'                  
            }
        }
        stage('tag release') {
          steps {                              
                echo 'teste lab'                                 
            }
        }
         stage('Deploy') {
           steps {             
                echo "fim lab"               
            }
        }
                       
           
        }
      } else {
         stages {
           stage('Build') {
            steps {
                echo 'inicio prod' 
            }
        }
     }
    }
}

