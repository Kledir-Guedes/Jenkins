
pipeline {
    agent any    
    parameters{
            choice( name: 'Environment',
               choices:'lab\nhomol\nprod',
               description: 'Which environment do you want to run the job in?' )
           }
          
    stages {
        stage('Build') {
            steps {
                echo 'inicio'                  
            }
        }
        stage('tag release') {
            environment {
                SSH_CREDS = 'credentials'
            steps {
                sh 'echo "SSH user is $SSH_CREDS_USR"'
                echo 'teste'    
            }
        }
         stage('Deploy') {
           steps {             
                echo 'fim'                
            }
        }       
    }
}
